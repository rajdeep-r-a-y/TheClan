<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePostActivity">

    <EditText
        android:id="@+id/postInput"
        android:background="@drawable/edittext_round_shape"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:textColor="#FFFFFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="Reach out to your clan..."
        android:textColorHint="#FFFFFF"
        android:gravity="top"
        android:layout_margin="12dp"
        android:padding="12dp"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/postButton"
        android:layout_width="221dp"
        android:layout_height="38dp"
        android:background="@drawable/post_button_shape"
        android:text="Post"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postInput" />

    <TextView
        android:id="@+id/Otherinputs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="112dp"
        android:fontFamily="@font/berkshireswash"
        android:padding="16dp"
        android:text="Be more friendly :"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postButton"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/Photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/berkshireswash"

        android:text="Photo"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"

        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Otherinputs" />

    <TextView
        android:id="@+id/Video"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:fontFamily="@font/berkshireswash"
        android:text="Video"

        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/Photo" />

    <TextView
        android:id="@+id/Camera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:fontFamily="@font/berkshireswash"
        android:text="Camera"

        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/Video" />

    <TextView
        android:id="@+id/GIF"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="12dp"
        android:fontFamily="@font/berkshireswash"
        android:text="GIF"

        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/Camera" />

</androidx.constraintlayout.widget.ConstraintLayout>